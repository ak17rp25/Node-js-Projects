<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Blogging APP</title>
    <%- include('./partials/style') %>
  </head>
  <body>
    <%- include('./partials/nav') %> <%- include('./partials/script') %> <% if
    (locals.user) { %>
    <div class="container form-container mt-4">
      <h3>Create a New Blog</h3>
      <form method = "post" action = "/blog/addBlog" enctype="multipart/form-data">
        <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control"
            id="floatingInputValue"
            placeholder="My Blog"
            name="title"
          />
          <label for="floatingInputValue">Enter Blog Title</label>
        </div>
        <div class="form-floating mb-3">
          <textarea
            class="form-control"
            placeholder="Enter Your Content Here"
            id="floatingTextarea"
            name="content"
          ></textarea>
          <label for="floatingTextarea">Content</label>
        </div>
        <div class="form-group mb-3">
          <label for="coverUpload" class="form-label">Upload Cover</label>
          <input
            type="file"
            class="form-control-file"
            id="coverUpload"
            name="coverImage"
          />
        </div>
        <button type="submit" class="btn btn-submit">Submit</button>
      </form>
    </div>
    <% } else{%>
    <script>
      window.location.href = "/";
    </script>
    <%} %>
  </body>
</html>
